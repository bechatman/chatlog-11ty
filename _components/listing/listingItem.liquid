<li class="post">  
  <a href="{{ article.url }}">
    {% if article.data.shareImage %}<img src="{{ article.data.shareImage }}" alt="" />{% endif %}            
    <h3 class="title">{{ article.data.title }}</h3>
    <p class="description">{{ article.data.description }}</p>
    <p class="post-date">{{ article.date }}</p>
  </a>
</li>