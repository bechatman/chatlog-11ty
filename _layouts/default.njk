<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
  </head>
  <body>
    {{ content | safe }}
    {% for component in components %}
      {% if component.type == 'oneColumnText'%}
        {{ component.content }}
      {% endif %}
    {% endfor %}
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  </body>
</html>